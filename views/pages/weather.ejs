<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        .xform {
            width: 500px;
            margin: 100px auto;
            border: solid 1px #ccc;
            padding: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="xform">
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="London">
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-primary" onclick="showWeatherData()">Show Weather</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="xform">
                <div class="temp">                    
                    <div id="tempval"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showWeatherData()
    {
        
        var location = document.getElementById("location").value;
        if(!location)
        {
            alert("Invalid location!")
        }
        else
        {
            var url = "/weather?location="+ location;
            $.ajax({
            url: url,
            context: document.body
            }).done(function(data) {
                console.log(data);
                document.getElementById("tempval").innerHTML=data               
            });
        }
        
    }
</script>
</body>
</html>